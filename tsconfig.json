{
    "compilerOptions": {
        "lib": ["es2019"],
        "target": "es2019",

        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "allowJs": true,
        // TODO: Consider turning this type-checking in PRs. Needs class syntax
        // to work, though
        // "checkJs": true,
        "composite": true,

        "outDir": "dist",
        "declarationMap": true,
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["./index.js", "./lib/**/*"]
}
