{
    "compilerOptions": {
        "lib": ["es2020"],
        "target": "es2020",

        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "composite": true,

        "outDir": "dist",
        "declarationMap": true,
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["./index.js", "./lib/**/*"]
}
